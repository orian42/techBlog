{{!-- HTML for the login view --}}
<div>
    <h3>Login</h3>
</div>
<div class="card border border-danger-subtle mt-4" style="width: 36rem;">
    <h5 class="card-header bg-danger-subtle">Login to your account:</h5>
    <div class="card-body">
        <form class="login-form">
            <div>
                <label for="username-login" class="form-label">Username: </label>
                <input type="text" id="username-login" name="username" class="form-control"/>
            </div>
            <div>
                <label for="password-login" class="form-label mt-4">Password: </label>
                <input type="password" id="password-login" name="password" class="form-control"/>
            </div>
            <div class="d-grid gap-2 d-md-block mt-4">
                <button type="submit" class="btn btn-secondary">Login!</button>
                <a href="/signup"><button type="button" class="btn btn-secondary">Sign up instead</button></a>
            </div>
        </form>
    </div>
</div>


<script src="/js/login.js"></script>