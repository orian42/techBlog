<div>
    <h3>Sign Up</h3>
</div>
<div class="card border border-success-subtle mt-4" style="width: 36rem;">
    <h5 class="card-header bg-success-subtle">Sign up for a new account:</h5>
    <div class="card-body">
        <form class="signup-form">
            <div>
                <label for="username-input" class="form-label">Username: </label>
                <input type="text" id="username-input" class="form-control"/>
            </div>
            <div>
                <label for="password-input" class="form-label mt-4">Password: </label>
                <input type="password" id="password-input" class="form-control"/>
            </div>
            <div class="d-grid gap-2 d-md-block mt-4">
                <button type="submit" class="btn btn-secondary">Sign Up!</button>
                <a href="/login"><button type="button" class="btn btn-secondary">Login instead</button></a>
            </div>
        </form>
    </div>
</div>

<script src="/js/signup.js"></script>